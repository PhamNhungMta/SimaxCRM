@using Microsoft.AspNetCore.Identity

@inject SignInManager<SimaxCrm.Model.Entity.ApplicationUser> SignInManager
@inject UserManager<SimaxCrm.Model.Entity.ApplicationUser> UserManager

<header class="app-header navbar">
    <button class="navbar-toggler sidebar-toggler d-lg-none mr-auto" type="button" data-toggle="sidebar-show">
        <span class="navbar-toggler-icon"></span>
    </button>
    <a class="navbar-brand" href="/">
        Admin
    </a>
    <button class="navbar-toggler sidebar-toggler d-md-down-none" type="button" data-toggle="sidebar-lg-show">
        <span class="navbar-toggler-icon"></span>

        @*<button class="btn goBack" onclick="goBack()">Go Back</button>*@
    </button>

    <!-- APP-HEADER-NAV -->
    <partial name="_app-header-nav" />
    <!-- /APP-HEADER-NAV -->

    @if (this.Context.Request.IsSignedIn())
    {
        <ul class="nav navbar-nav ml-auto">
        

            <li id="myDropdown" class="nav-item dropdown d-md-down-none">
                <a class="nav-link" href="#" data-toggle="dropdown">
                    <i class="icon-bell"></i>
                    <span class="badge badge-pill badge-danger lblNotiCount"></span>
                </a>
                <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg pt-0" style="overflow: auto;max-height: 350px;">
                    <div class="dropdown-header bg-light"><strong>You have <span class="lblNotiCount"></span> notifications</strong></div>
                    <div class="lblNotiData">
                        <a class="dropdown-item" href="javascript:;">
                            New user registered
                            <span style="float:right">x</span>
                        </a>
                    </div>
                 
                </div>
            </li>

            <!-- USER-NAV -->
            <partial name="_user-nav" />
            <!-- /USER-NAV -->

        </ul>
    }
</header>
