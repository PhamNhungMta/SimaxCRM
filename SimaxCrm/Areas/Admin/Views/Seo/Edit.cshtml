@model SimaxCrm.Model.Entity.Seo

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">
                <strong>Update</strong>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />

                            <<div class="form-group">
                                <label asp-for="SeoPage" class="control-label"></label>

                                <select asp-for="SeoPage" class="form-control" style="height:35px" asp-items="Html.GetEnumSelectList<SimaxCrm.Model.Enum.SeoPage>()">
