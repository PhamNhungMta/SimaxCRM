@model SimaxCrm.Model.Entity.Slider

@{
    ViewData["Title"] = "Update Slider";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">
                <strong>Update Slider</strong>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Edit"  enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />

                            <div class="form-group">
                                <label asp-for="ImagePath" class="control-label"></label>
                                <div class="controls">
                                    <input type="hidden" asp-for="ImagePath" class="form-control" />
                                    <input type="file" id="PostedFile" name="PostedFile" class="span6" />
                                    <img src="/@Model.ImagePath" height="50" />

                                </div>
                            </div>

                            <div class="form-group"><label asp-for="Url" class="control-label"></label><input asp-for="Url" class="form-control" /><span asp-validation-for="Url" class="text-danger"></span></div>

                            <div class="form-group"><label asp-for="Status" class="control-label"></label><input asp-for="Status" /><span asp-validation-for="Status" class="text-danger"></span></div>

                            @*SampleFields*@


                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-primary">Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
