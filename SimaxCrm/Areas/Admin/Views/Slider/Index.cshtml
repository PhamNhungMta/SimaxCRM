@model IEnumerable<SimaxCrm.Model.Entity.Slider>

@{
    ViewData["Title"] = "Slider List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> Slider List
            </div>
            <div class="card-body">
                <table class="table table-responsive-sm">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ImagePath)</th>

                            <th>@Html.DisplayNameFor(model => model.Url)</th>
                            <th>@Html.DisplayNameFor(model => model.Status)</th>


                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                <img src="/@item.ImagePath" height="50" />
                            </td>

                            <td>@Html.DisplayFor(modelItem => item.Url)</td>

                            <td>@Html.DisplayFor(modelItem => item.Status)</td>


                            <td>
                                <form asp-action="Delete" class="form-delete">
                                    <input type="hidden" name="Id" value="@item.Id" />
                                    <button type="submit" onclick="return confirm('Do you want to delete this record')" class="btn btn-danger btn-sm">
                                        Delete
                                    </button>
                                </form>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>

                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>