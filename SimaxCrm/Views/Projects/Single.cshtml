@model SimaxCrm.Model.Entity.Project
@{
    var relatedProducts = ViewBag.RelatedProducts as List<SimaxCrm.Model.Entity.Project>;
    var objRatings = Model.UserRating;
    var userInfo = ViewBag.User as SimaxCrm.Model.Entity.ApplicationUser;
    var systemSetup = ViewBag.SystemSetup as SimaxCrm.Model.Entity.SystemSetup;
}
<style>
    .alert ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
</style>

<main id="main">

    <!-- ======= Intro Single ======= -->
    <section class="intro-single">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-8">
                    <div class="title-single-box">
                        <h3 class="title-single">@Model.Name</h3>

                        <p class="addresshouse">
                            <i class="bi bi-geo-alt-fill"></i> @Model.AddressPlain
                            <span class="d-inline-block" style="margin-left: 10px"><i class="bi bi-eye"></i> @Model.ViewCount views</span>
                            <span class="d-inline-block" style="margin-left: 10px"><i class="bi bi-calendar3"></i> @Model.CreatedDate.ToString("MMM dd, yyyy")</span>
                        </p>
                       
                    </div>
                </div>
                <div class="col-md-12 col-lg-4">
                    <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="index.html">Home</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="property-grid.html">Project</a>
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section><!-- End Intro Single-->
    <!-- ======= Property Single ======= -->
    <section class="property-single nav-arrow-b">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div id="property-single-carousel" class="swiper">
                        <div class="swiper-wrapper">
                            @foreach (var attachmentMapping in Model.AttachmentProjectMapping)
                            {
                                <div class="carousel-item-b swiper-slide">
                                    <img src="/@attachmentMapping.Attachment.FilePath" class="img-fluid" rel="0" alt="/@attachmentMapping.Attachment.FileName" title="/@attachmentMapping.Attachment.FileName">
                                </div>
                            }
                        </div>
                    </div>
                    <div class="property-single-carousel-pagination carousel-pagination"></div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">

                    <div class="row justify-content-between">
                        <div class="col-md-5 col-lg-4">
                            <div class="property-price d-flex justify-content-center foo">
                                <div class="card-header-c d-flex">
                                    <div class="card-box-ico">
                                        <span class="">@ViewBag.SystemSetup.CurrencySymbol</span>
                                    </div>
                                    <div class="card-title-c align-self-center">
                                        <h5 class="title-c">@Model.MaxSaleRateString</h5>
                                    </div>
                                </div>
                            </div>
                            <div class="property-summary">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="title-box-d section-t4">
                                            <h3 class="title-d">Quick Summary</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="summary-list">
                                    <ul class="list">
                                        <li class="d-flex justify-content-between">
                                            <strong>Category:</strong>
                                            <span>@Model.PropertyCategoryId</span>
                                        </li>
                                        <li class="d-flex justify-content-between">
                                            <strong>Sub Category:</strong>
                                            <span>@Model.PropertySubcategoryId</span>
                                        </li>
                                       
                                        <li class="d-flex justify-content-between">
                                            <strong>Date:</strong>
                                            <span>@Model.CreatedDate.ToString("MMM dd, yyyy")</span>
                                        </li>
                                        <li class="d-flex justify-content-between">
                                            <strong>Views:</strong>
                                            <span>@Model.ViewCount views</span>
                                        </li>
                                        <li class="d-flex justify-content-between">
                                            <strong>Status:</strong>
                                            <span>@Model.Type</span>
                                        </li>
                                        <li class="d-flex justify-content-between">
                                            <strong>Area:</strong>
                                            <span>
                                                @Model.TotalArea m
                                            <sup>2</sup>
                                        </span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-7 col-lg-7 section-md-t3">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="title-box-d">
                                    <h3 class="title-d">Property Description</h3>
                                </div>
                            </div>
                        </div>
                        <div class="property-description">
                            <p class="description color-text-a">
                                @Html.Raw(Model.Description)
                            </p>
                        </div>
                        <div class="row section-t3">
                            <div class="col-sm-12">
                                <div class="title-box-d">
                                    <h3 class="title-d">Amenities</h3>
                                </div>
                            </div>
                        </div>
                        <div class="amenities-list color-text-a">
                            <div class="row">
                                @{
                                    var centralizedAc = Model.CentralizedAc ? "bi-check-circle-fill" : "bi-x-circle-fill";
                                    var securityGuard = Model.SecurityGuard ? "bi-check-circle-fill" : "bi-x-circle-fill";
                                    var fireSafety = Model.FireSafety ? "bi-check-circle-fill" : "bi-x-circle-fill";
                                    var isCentralizedAc = Model.CentralizedAc ? "bi-check-circle-fill" : "bi-x-circle-fill";
                                    var cctvCamera = Model.CctvCamera ? "bi-check-circle-fill" : "bi-x-circle-fill";
                                    var lift = Model.Lift ? "bi-check-circle-fill" : "bi-x-circle-fill";
                                    var club = Model.club ? "bi-check-circle-fill" : "bi-x-circle-fill";
                                    var SwimmingPool = Model.SwimmingPool ? "bi-check-circle-fill" : "bi-x-circle-fill";
                                    var gardenArea = Model.GardenArea ? "bi-check-circle-fill" : "bi-x-circle-fill";
                                    var kidsPlayArea = Model.KidsPlayArea ? "bi-check-circle-fill" : "bi-x-circle-fill";
                                    var gym = Model.Gym ? "bi-check-circle-fill" : "bi-x-circle-fill";
                                }

                                <div class="col-sm-4">
                                    <p><i class="bi @centralizedAc"></i> Centralized Ac</p>
                                </div>
                                <div class="col-sm-4">
                                    <p><i class="bi @securityGuard"></i> Security Guard</p>
                                </div>
                                <div class="col-sm-4">
                                    <p><i class="bi @fireSafety"></i> Fire Safety</p>
                                </div>
                                <div class="col-sm-4">
                                    <p><i class="bi @cctvCamera"></i> Cctv Camera</p>
                                </div>
                                <div class="col-sm-4">
                                    <p><i class="bi @lift"></i> Lift</p>
                                </div>
                                <div class="col-sm-4">
                                    <p><i class="bi @club"></i> Club</p>
                                </div>
                                <div class="col-sm-4">
                                    <p><i class="bi @SwimmingPool"></i> Swimming pool</p>
                                </div>
                                <div class="col-sm-4">
                                    <p><i class="bi @gardenArea"></i> Garden area</p>
                                </div>
                                <div class="col-sm-4">
                                    <p><i class="bi @kidsPlayArea"></i> kids play area</p>
                                </div>
                                <div class="col-sm-4">
                                    <p><i class="bi @gym"></i> Gym</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-10 offset-md-1">
                <ul class="nav nav-pills-a nav-pills mb-3 section-t3" id="pills-tab" role="tablist">

                    <li class="nav-item">
                        <a class="nav-link active" id="pills-plans-tab" data-bs-toggle="pill" href="#pills-plans" role="tab" aria-controls="pills-plans" aria-selected="false">Ratings & Reviews</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pills-map-tab" data-bs-toggle="pill" href="#pills-map" role="tab" aria-controls="pills-map" aria-selected="false">Location</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " id="pills-video-tab" data-bs-toggle="pill" href="#pills-video" role="tab" aria-controls="pills-video" aria-selected="true">Video</a>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">

                    <div class="tab-pane fade show active" id="pills-plans" role="tabpanel" aria-labelledby="pills-plans-tab">
                        <partial name="_review" model="objRatings" />
                    </div>
                    <div class="tab-pane fade" id="pills-map" role="tabpanel" aria-labelledby="pills-map-tab">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.1422937950147!2d-73.98731968482413!3d40.75889497932681!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25855c6480299%3A0x55194ec5a1ae072e!2sTimes+Square!5e0!3m2!1ses-419!2sve!4v1510329142834" width="100%" height="460" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                    <div class="tab-pane fade" id="pills-video" role="tabpanel" aria-labelledby="pills-video-tab">
                        @Html.Raw(Model.EmbadVideo)
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row section-t3">
                    <div class="col-sm-12">
                        <div class="title-box-d">
                            <h3 class="title-d">Contact Agent</h3>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-lg-4">
                        <img src="/@userInfo.ImagePath" alt="Adriana Pollich" class="img-fluid">
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="property-agent">
                            <h4 class="title-agent"><a asp-controller="agents" asp-action="single" asp-route-id="@userInfo.Id">@userInfo.Name</a></h4>
                            <p class="color-text-a">
                                Contact Information
                            </p>
                            <ul class="list-unstyled">
                                <li class="d-flex justify-content-between">
                                    <strong>Phone:</strong>
                                    <span class="color-text-a"><a href="#">@userInfo.PhoneNumber</a></span>
                                </li>
                              
                                <li class="d-flex justify-content-between">
                                    <strong>Email:</strong>
                                    <span class="color-text-a"><a href="#">@userInfo.Email</a></span>
                                </li>
                            </ul>
                           
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-4">
                        <div class="property-contact">
                           <partial name="_contactSingle" model="new SimaxCrm.Model.Entity.CustomerQuery()" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Property Single-->

</main><!-- End #main -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">

        $(document).ready(function () {
            loadGoogleMap();

            $("#ProductId").val('@Model.Id');
            $("#ProjectId").val('0');
            $("#RatingProductId").val('@Model.Id');
            $("#RatingUrlSlug").val('@Model.Name.ToFriendlyUrl()');

            $("#contact-form-single").submit(function (e) {
                e.preventDefault();
                saveFrom.trigger('#contact-form-single', 'divContactSingleErrorSummary', function () {
                });
            });
        });

        function loadGoogleMap() {
             var mapParam = [{
                lat: '@Model.AddressLat',
                 lng: '@Model.AddressLng',
                 title:'@Model.Name'
            }];
            setTimeout(function () {
                googleApi.loadGoogleMap(mapParam, 'trafficMap');
            },1000)
        }
    </script>
}