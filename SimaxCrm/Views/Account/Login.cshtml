@model SimaxCrm.Model.RequestModel.UserLoginModel;

<div id="app">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card login-form">
                    <div class="card-body">
                        <h4 class="text-center">Login</h4>
                        <br>
                        <br>
                        <form method="POST" asp-action="login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input name="ReturnUrl" id="ReturnUrl" type="hidden" value="@ViewBag.ReturnUrl" />
                            <div class="form-group">
                                <input asp-for="Email" type="text" class="form-control" placeholder="Name">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-blue btn-full fw6">
                                    Login
                                </button>
                            </div>
                            <div class="form-group text-center">
                                @if (ViewBag.IsAdminUser == true)
                                {
                                    <p>Don&#039;t have an account? <a asp-action="Register" asp-route-returnUrl="@ViewBag.ReturnUrl" class="d-block d-sm-inline-block text-sm-left text-center">Register a new account</a></p>
                                }
                                else
                                {
                                    <p> Don &#039;t have an account? <a asp-action="Register" asp-route-returnUrl="@ViewBag.ReturnUrl" asp-route-type="Admin" class="d-block d-sm-inline-block text-sm-left text-center">Register a Admin account</a></p>
                                }
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
