    var systemSetup = ViewBag.SystemSetup as SimaxCrm.Model.Entity.SystemSetup;
}
<!-- ======= Header/Navbar ======= -->
<nav class="navbar fixed-top">
    <div class="navbar-multilanguage">
        <div class="row float-right">
            <div class="currency">
                <select class="select-currency">
                    <option value="">Currency</option>
                </select>
            </div>
            <div class="language">
                <select class="select-language">
                    <option value="">English</option>
                </select>
            </div>
        </div>
    </div>
    <div class="navbar-content">
        <div class="navbar-menu">
            <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarDefault" aria-controls="navbarDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <a class="navbar-brand" href="/">
                <img src="/images/logo.svg" class="logo" height="40" alt="">
            </a>
        </div>
        <div class="navbar-collapse justify-content-center" id="navbarDefault">
            <ul class="navbar-nav">

                <li class="nav-item">
                    <a class="nav-link " asp-controller="properties" asp-action="list">Product Categories</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="projects" asp-action="list">Real Estate Listings</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link " asp-controller="agents" asp-action="list">Service Listings</a>
                </li>

            </ul>
        </div>
        <div class="navbar-function">
            <button type="button" class="btn navbar-toggle-box navbar-toggle-box-collapse" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01">
                <i class="bi bi-search"></i>
            </button>
            <a class="btn btn-default btn-head" asp-controller="wishlist" asp-action="list"><i class="bi bi-heart"></i></a>
            <a class="btn btn-default btn-head" asp-controller="wishlist" asp-action="list"><i class="bi bi-cart"></i></a>
            <a class="btn btn-default btn-head" asp-controller="wishlist" asp-action="list"><i class="bi bi-person"></i></a>
            @if (this.Context.Request.MainIsSignedIn())
            {
                <a class="menu-item" href="/admin/dashboard">@Html.MainLoggedInUserProperty(this.Context.Request, "Name")</a>

                <form asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Page("/Dashboard", new {area = ""})" method="POST" id="logoutForm">
                    <script>
                        function logout() {
                            $('#logoutForm').submit();
                        }
                    </script>
                    <a class="" href="javascript: void(0)" onclick="logout()">
                        <i class="bi bi-chevron-down"></i>
                    </a>
                </form>
            }
            else
            {
                <a class="btn btn-default btn-head" asp-controller="account" asp-action="login" id="btn-login">Login</a>
            }

        </div>
    </div>
    <div class="navbar-category row">
        <div class="category-item col-3">Bathroom & Plumbing <i class="bi bi-chevron-down"></i></div>
        <div class="category-item col-3">Kitchen & Appliances <i class="bi bi-chevron-down"></i></div>
        <div class="category-item col-3">Finishes <i class="bi bi-chevron-down"></i></div>
        <div class="category-item col-3">Tools & Machinery <i class="bi bi-chevron-down"></i></div>
    </div>
</nav>
